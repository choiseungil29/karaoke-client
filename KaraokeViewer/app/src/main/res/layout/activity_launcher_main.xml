<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launchur_background"
    android:orientation="horizontal"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_launcher_vpang"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/btn_vpang" />

        <Button
            android:id="@+id/btn_launcher_friend"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_duet" />

        <Button
            android:id="@+id/btn_launcher_star"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/btn_audition" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:background="@drawable/video_background"
            android:gravity="center_vertical">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="false" />
        </RelativeLayout>

        <com.karaokepang.View.VerticalMarqueeTextView
            android:id="@+id/text_led"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:lineSpacingExtra="50dip"
            android:textStyle="bold"
            app:marqueeSpeed="25"
            app:textColor="@android:color/white"
            app:textSize="36sp" />
    </LinearLayout>

</LinearLayout>
