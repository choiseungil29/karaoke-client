<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="90"
        android:background="#d5d5d5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/btn_text_front" />

        <ImageView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/btn_text_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="470"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="5dp">

        <GridView
            android:id="@+id/grid_left"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="5dp" />

        <GridView
            android:id="@+id/grid_right"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="240"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="330" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="430"
            android:background="#e6e6e6"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_singer"
                android:text="노래 : 신승훈 - 미소속의 비친 그대를" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_leftBackground"
                android:text="전경 : 3번" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rightBackground"
                android:text="배경 : 7번" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="번호 : " />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="합성에 동의하시면 전송을 눌러주세요" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/btn_send_press"
                android:text="전송" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="나가기"
                android:layout_weight="1"
                android:id="@+id/btn_back" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="330" />


    </LinearLayout>

</LinearLayout>