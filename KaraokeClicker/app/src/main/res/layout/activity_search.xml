<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_search_song_name"
            android:layout_width="97dp"
            android:layout_height="27.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_search_song_name" />

        <ImageView
            android:id="@+id/btn_search_singer_name"
            android:layout_width="88.5dp"
            android:layout_height="27.5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_search_song_name"
            android:layout_toRightOf="@+id/btn_search_song_name"
            android:src="@drawable/btn_search_singer_name" />

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="158.5dp"
            android:layout_height="27.5dp"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/btn_search"
            android:background="@drawable/edit_search_bar" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="27.5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_search" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64.5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_search_result_top" />

    <ListView
        android:id="@+id/list_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
